<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FarmCollectionChar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/currentCharName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:fontFamily="@font/barlow_bold"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:fontFamily="@font/barlow_bold"
                android:paddingBottom="0dp"
                android:text="Happiness Meter"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
            >

                <ProgressBar
                    android:id="@+id/happinessMeterBar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="349dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center|left"
                    android:progressDrawable="@drawable/custom_happiness_meter" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/barlow_bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:rotationY="0"
                    android:textSize="10sp" />


            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="352dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/barlow_bold"
            android:text="Collection"
            android:textColor="#616161" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collectionCharRecyclerView"
            android:layout_width="351dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>

</FrameLayout>