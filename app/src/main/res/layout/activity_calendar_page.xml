<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/defaultbackground"
    tools:context=".activity.CalendarPage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingHorizontal="20dp"
            >

            <ImageView
                android:id="@+id/calendarBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:src="@drawable/arrow_back" />
        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_border"
            android:paddingTop="30dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#7DA9AC"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/barlow"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/viewMoreCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@drawable/view_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/calendarMood"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/homepage_emoji"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/calendarThoughts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/thoughts"
                        android:onClick="onClick"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:id="@+id/calendarThoughtsText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/barlow"
                            android:gravity="center_vertical"
                            android:text="Happy monke"
                            android:textColor="#7DA9AC"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/meditation"
                        android:paddingHorizontal="20dp"
                        >

                        <TextView
                            android:id="@+id/calendarMeditationText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#7DA9AC"
                            android:text="30 Minutes"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/barlow"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>