<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditationPage"
    android:background="@drawable/defaultbackground"
    >

    <!-- Top Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/volume_icon"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/cross_icon"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Meditation Circle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="614dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="100dp">

                <!--progress bar implementation-->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/progress_ring_layer"
                    android:textAlignment="center" />

                <!--Text implementation in center of the progress bar-->
                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/barlow_bold"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="#7DA9AC"
                    android:textSize="28sp" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="330dp"
            android:layout_height="48dp"
            android:background="@drawable/meditation_pause_button"
            android:fontFamily="@font/barlow_bold"
            android:text="PAUSE"
            android:textColor="#7DA9AC"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>