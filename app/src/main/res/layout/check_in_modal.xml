<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/petConditionImage"
        android:layout_width="233dp"
        android:layout_height="123dp"
        android:src="@drawable/pet_happy_chick" />

    <TextView
        android:id="@+id/welcomeBackText"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:fontFamily="@font/barlow_bold"
        android:text="Welcome Back!"
        android:textAlignment="center"
        android:textSize="29sp" />

    <TextView
        android:id="@+id/missedDaysTextView"
        android:layout_width="288dp"
        android:layout_height="33dp"
        android:text="You missed 5 days."
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/conditionPetTextView"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Your pet missed you."
        android:textAlignment="center" />

    <Button
        android:id="@+id/customModalButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OK" />

</LinearLayout>