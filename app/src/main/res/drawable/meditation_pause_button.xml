<!-- custom_button_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="30dp" /> <!-- Same radius as your button -->
        </shape>
    </item>
    <!-- Button Background -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color -->
            <corners android:radius="30dp" /> <!-- Same radius as your button -->
        </shape>
    </item>
</layer-list>


